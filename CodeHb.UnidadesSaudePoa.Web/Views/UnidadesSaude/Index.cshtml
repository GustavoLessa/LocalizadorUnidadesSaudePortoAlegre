            @Html.DisplayNameFor(model => model.result.Records.FirstOrDefault().TipoEmergencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.result.Records.FirstOrDefault().Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.result.Records.FirstOrDefault().Telefone)
        </th>         
        <th>
            @Html.DisplayNameFor(model => model.result.Records.FirstOrDefault().EspecialidadePt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.result.Records.FirstOrDefault().LinkPt)
        </th> 
        <th></th>
    </tr>

@foreach (var item in Model.result.Records) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Ver rota", "VisualizarRota")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoInstitucao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoEmergencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EspecialidadePt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinkPt)
        </td>
        

