@model CodeHb.UnidadesSaudePoa.Web.Models.UnidadeSaude

@{
    ViewBag.Title = "Index";
}

<h2>Lista das Unidades de Saúde</h2>

@*<input class="col-lg-1"/>*@
    <div class="panel-body col-lg-10">       
        @Html.TextBox("EnderecoOrigem", null, new { @class= "form-control col-lg-1 textbox" })
        @Html.ActionLink("Buscar", "Buscar", "Unidadessaude", new { @class = "btn btn-primary" })
    </div>
    
   

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.result.Records.FirstOrDefault().Nome)
        </th>
        <th>
            @Html.DisplayName("Rota")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.result.Records.FirstOrDefault().TipoInstitucao)
